<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <Page.actionBar>
      <ActionBar title="Nature Walk"/>
  </Page.actionBar>

    <StackLayout orientation="vertical">
        <Label class="h2 text-center" text="Life you might see on a walk"></Label>
        <Label class="h2 text-center" text="through a Central Florida park!"></Label>
        <Label class="h3 text-center" text="Click the image to find out about each life form."></Label>

        <!--With the id attribute, you can access the id's value in the main.js file (code-behind file).-->
        <Image id="Butterfly" src="res://zebra_longwing" width="100" height="100" stretch="aspectFill" horizontalAlignment="center" tap="getFacts" />
        <Image id="Wildflower" src="res://coreopsis_gigantea" width="100" height="100" stretch="aspectFill" horizontalAlignment="center" tap="" />
        <Image id="Mockingbird" src="res://mockingbird" width="100" height="100" stretch="aspectFill" horizontalAlignment="center" tap="" />
        <Image id="Blossom" src="res://orange_blossoms" width="100" height="100" stretch="aspectFill" horizontalAlignment="center" tap="" />
    </StackLayout>

</Page>